# ===============================
# Server Configuration
# ===============================
PORT=8000
NODE_ENV=development

# ===============================
# Database Configuration
# ===============================
# Local PostgreSQL (no Docker for now)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payment_gateway
DB_USER=gateway_user
DB_PASSWORD=gateway_pass

# Optional: full DATABASE URL (use either this OR above fields)
DATABASE_URL=postgresql://gateway_user:gateway_pass@localhost:5432/payment_gateway

# ===============================
# Security / Authentication
# ===============================
# Used for hashing or signing if needed later
API_KEY_HEADER=x-api-key
API_SECRET_HEADER=x-api-secret

# ===============================
# Payment Gateway Defaults
# ===============================
DEFAULT_CURRENCY=INR
MIN_ORDER_AMOUNT=100

# ===============================
# Logging
# ===============================
LOG_LEVEL=debug
